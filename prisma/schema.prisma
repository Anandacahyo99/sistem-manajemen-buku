generator client {
  provider = "prisma-client-js"
  //binaryTargets = ["native", "rhel-openssl-3.0.x"]
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

// 1. Tabel User (Pemilik Buku)

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  
  // @default(USER) artinya: Kalau tidak diisi, otomatis jadi USER biasa.
  role     Role     @default(USER)
  // Relasi: Satu user punya banyak buku
  books     Book[]   

  refreshToken String?  @db.Text
  
  createdAt DateTime @default(now())
}

//2.tabel buku

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  year        Int
  
  // Relasi: Buku ini milik siapa?
  userId      Int
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  // onDelete: Cascade artinya: Kalau User dihapus, bukunya ikut hilang otomatis.

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}